#pragma once
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

//MangMotChieu.h

class MangMotChieu
{
private:
	int n;
	int* Arr;
public:
	MangMotChieu();
	void Nhap_Ngau_Nhien();
	void Xuat();
	int Dem_Gia_Tri_x(int);
	int Tim_Min_Le();
	int Tim_SNT_Max();

};

//MangMotChieu.cpp

MangMotChieu::MangMotChieu()
{
	n = 0;
	Arr = new int[100];
	Arr[0] = 0;
}

void MangMotChieu::Nhap_Ngau_Nhien()
{

	cout << "Nhap so luong phan tu: ";
	cin >> n;
	srand(time(NULL));
	for (int i = 0; i < n; i++)
	{
		//Arr[i] = rand();
		cin >> Arr[i];
	}

}

void MangMotChieu::Xuat()
{
	for (int i = 0; i < n; i++)
	{
		cout << Arr[i] << " ";
	}
}

int MangMotChieu::Dem_Gia_Tri_x(int x)
{
	int dem_x = 0;
	for (int i = 0; i < n; i++)
	{
		if (Arr[i] == x)
		{
			dem_x++;
		}
	}
	return dem_x;;
}

int MangMotChieu::Tim_Min_Le()
{
	int min_le = Arr[0];
	for (int i = 0; i < n; i++)
	{
		if (Arr[i] < min_le && Arr[i] % 2 != 0)
		{
			min_le = Arr[i];
		}
	}
	return min_le;
}

bool KiemTraSNT(int n)
{
	if (n < 2)
	{
		return false;
	}
	for (int i = 2; i <= n / 2; i++)
	{
		if (n % i == 0)
			return false;

	}
	return true;
}
int MangMotChieu::Tim_SNT_Max()
{
	int SNTmax = 0;
	int First_Snt, temp;
	int demsnt = 0;
	/// Tim snt dau tien ///

	for (int i = 0; i < n; i++)
	{
		if (KiemTraSNT(Arr[i]))
		{
			demsnt++;
			First_Snt = i; //// Snt max = SNT Arr[0]
			break;
		}
	}
	if (demsnt == 0)
	{
		cout << "Khong co so nguyen to";
	}
	else
	{

		temp = First_Snt;
		for (int i = temp + 1; i < n; i++)
		{
			if (KiemTraSNT(Arr[i]) && Arr[i] > First_Snt)
			{
				SNTmax = Arr[i];
			}
		}
	}
	return SNTmax;
}

// Source.cpp

#define MAX 100
using namespace std;
int main()
{

	MangMotChieu a;
	a.Nhap_Ngau_Nhien();
	a.Xuat();
	cout << "\n//////////////" << endl;
	int x;
	cout << "Nhap gia tri can tim: ";
	cin >> x;
	cout << "Gia tri " << x << " xuat hien " << a.Dem_Gia_Tri_x(x) << " lan";
	cout << "\n//////////////" << endl;
	cout << "Gia tri le nho nhat: " << a.Tim_Min_Le();
	cout << "\n//////////////" << endl;
	cout << "So nguyen to lon nhat: " << a.Tim_SNT_Max();

	return 0;
}



